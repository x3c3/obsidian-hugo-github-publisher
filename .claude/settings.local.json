{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(bun run:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run lint)",
      "Bash(npm run build:*)",
      "Bash(npx tsc:*)",
      "Bash(npx eslint:*)",
      "Bash(bun build:*)",
      "Bash(tsc --noEmit --skipLibCheck)",
      "Bash(npx typescript:*)",
      "Bash(bun install:*)",
      "Bash(./node_modules/.bin/tsc:*)",
      "Bash(./node_modules/.bin/eslint:*)",
      "Bash(git add:*)"
    ]
  },
  "enableAllProjectMcpServers": false
}